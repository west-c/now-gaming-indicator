{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "standard-with-typescript",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "@typescript-eslint/consistent-type-definitions": "off",
        "@typescript-eslint/no-floating-promises": [
            "error",
            {
              "ignoreIIFE": true
            }
        ]
    }
}
